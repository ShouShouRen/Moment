{% extends 'base.twig' %}

{% block head %}
	<link rel="stylesheet" href="{{ session.Resource_PATH }}orders.css">
	<style>
		.container-grid {
			display: grid;
			width: 96%;
			margin: 0 auto;
			gap: 1.8rem;
			grid-template-columns: 14rem auto 0;
		}
		@media(max-width: 992px) {
			.container-grid {
				display: grid;
				width: 96%;
				margin: 0 auto;
				gap: 1.8rem;
				grid-template-columns: auto;
			}

			.rwd {
				justify-content: center;
				align-items: center;
			}
		}
		.right {
			margin-top: 1.4rem;
			position: absolute;
			right: 5px;
		}
		.pt-6 {
			padding-top: 4.5rem;
		}
	</style>
{% endblock %}

{% block title %}
	Orders
{% endblock %}
{% block main %}
	<div class="container d-flex pt-6 h-100vh flex-wrap rwd">

		<div class="card col-12 col-md-3" data-bs-toggle="modal" data-bs-target="#exampleModal">

			<h3 class="title">Card 1</h3>
		</div>

		<div class="card col-12 col-md-3" data-bs-toggle="modal" data-bs-target="#exampleModal">

			<h3 class="title">Card 2</h3>

		</div>

		<div class="card col-12 col-md-3" data-bs-toggle="modal" data-bs-target="#exampleModal">

			<h3 class="title">Card 3</h3>

		</div>

		<div class="card col-12 col-md-3" data-bs-toggle="modal" data-bs-target="#exampleModal">

			<h3 class="title">Card 4</h3>

		</div>
		<div class="card col-12 col-md-3" data-bs-toggle="modal" data-bs-target="#exampleModal">

			<h3 class="title">Card 5</h3>

		</div>
		<div class="card col-12 col-md-3" data-bs-toggle="modal" data-bs-target="#exampleModal">

			<h3 class="title">Card 6</h3>

		</div>
		<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
			<div class="modal-dialog">
				<div class="modal-content">
					<div class="modal-header">
						<h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
						<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
					</div>
					<div class="modal-body">
						...
					</div>
					<div class="modal-footer">
						<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
						<button type="button" class="btn btn-primary">Save changes</button>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
